@model IEnumerable<ProyectoDAW_hemeroteca_MDK.Models.TipoProyecto>

@{
    ViewData["Title"] = "Index";
}
<html>
<body>
    <br />
    <!-- HERO -->
    <section class="hero hero-bg d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-md-10 col-12 d-flex flex-column justify-content-center align-items-center">
                    <div class="hero-text">

                        <h1 class="text-white" data-aos="fade-up">HEMEROTECA MDK</h1>
                        <h3>TUS PROYECTOS A TU ALCANCE</h3>
                       
                    </div>
                </div>

                <div class="col-lg-6 col-12">
                    <div class="hero-image" data-aos="fade-up" data-aos-delay="300">

                        <img src="/theme/img/working-girl.png" class="img-fluid" alt="working girl">
                    </div>
                </div>

            </div>
        </div>
    </section>


    <!-- ABOUT -->
    <section class="about section-padding pb-0" id="about">
        <div class="container">
            <div class="row">

                <div class="col-lg-7 mx-auto col-md-10 col-12">
                    <div class="about-info">

                        <h2 class="mb-4" data-aos="fade-up">La mejor <strong>hemeroteca digital</strong> en El Salvador</h2>

                        <p class="mb-0" data-aos="fade-up">
                            Coleccion de proyectos, pasantias y tesis de interes nacional y mundial es lo que encontraras en esta plataforma.
                            
                            <br><br>Se podra <strong>encontrar</strong> 
                            los tipos de proyecto, proyectos realizados, estudiantes, carrera y facultades de universidad.
                        </p>
                    </div>

                    <div class="about-image" data-aos="fade-up" data-aos-delay="200">

                        <img src="/theme/img/office.png" class="img-fluid" alt="office">
                    </div>
                </div>

            </div>
        </div>
    </section>


    <!-- PROJECT -->
    <section class="project section-padding" id="project">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-12 col-12">

                    <h2 class="mb-5 text-center" data-aos="fade-up">
                        Eche un vistazo a nuestros 
                        <strong>proyectos digitales</strong>
                    </h2>

                    <div class="owl-carousel owl-theme" id="project-slide">
                        <div class="item project-wrapper" data-aos="fade-up" data-aos-delay="100">
                            <img src="/theme/img/project/project-image01.jpg" class="img-fluid" alt="project image">

                            <div class="item project-wrapper" data-aos="fade-up">
                                <img src="/theme/img/project/project-image05.jpg" class="img-fluid" alt="project image">


                            </div>
                            <div class="item project-wrapper" data-aos="fade-up">
                                <img src="/theme/img/project/project-image02.jpg" class="img-fluid" alt="project image">


                            </div>

                        </div>
        </div>
    </section>


    <!-- TESTIMONIAL -->
    <section class="testimonial section-padding">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-md-5 col-12">
                    <div class="contact-image" data-aos="fade-up">

                        <img src="/theme/img/female-avatar.png" class="img-fluid" alt="website">
                    </div>
                </div>

                <div class="col-lg-6 col-md-7 col-12">
                    <h4 class="my-5 pt-3" data-aos="fade-up" data-aos-delay="100">TESTIMINIO</h4>

                    <div class="quote" data-aos="fade-up" data-aos-delay="200"></div>

                    <h2 class="mb-4" data-aos="fade-up" data-aos-delay="300">
                    Excelente pagina, se encuentran proyectos de todo tema, categoria y años.</h2>

                    <p data-aos="fade-up" data-aos-delay="400">
                        <strong>JONAS JUAREZ</strong>

                        <span class="mx-1">/</span>

                        <small>ESTUDIANTE</small>
                    </p>
                </div>

            </div>
        </div>
    </section>





</body>
</html>